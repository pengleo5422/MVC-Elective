@model IEnumerable<WebApp.Models.Teach>

@{
    ViewData["Title"] = "課程清單";
    Layout = "_Layout Teacher";
}

<h1>課程清單</h1>

<p>
    <a asp-action="Create">現在加課</a>
</p>
<form asp-controller="Teaches" asp-action="Index" method="get">
    <p>
        課程名稱: <input type="text" name="SearchString" />
        <input type="submit" value="搜尋" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classroom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.credit)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classroom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.credit)
            </td>
            <!--<td>
                <a asp-action="Edit" asp-route-id="@item.ID">更改</a> |
                <a asp-action="Details" asp-route-id="@item.ID">詳情</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">刪除</a>
            </td>-->
        </tr>
}
    </tbody>
</table>
