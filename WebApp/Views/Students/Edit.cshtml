@model WebApp.Models.Student
@using Microsoft.AspNetCore.Http;

@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Edit";
    var Member = HttpContextAccessor.HttpContext.Session.GetString("Member");
}

<h2>更改個人資料</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Member" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account" class="control-label">帳號</label>
                <input asp-for="Account" class="form-control" readonly />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">密碼</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <label>

                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
                <label style="color:blue;">@ViewBag.Message</label>
            </div>
           
        </form>
    </div>
</div>
<div>
    <label>

    </label>
</div>
<div>
   
    <a asp-controller="Teaches" asp-action="Pindex">回到選課清單</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
